<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>MY APP</title>
   
</head>

<body>
    <h1> Nodemon auto update the server.
    </h1>
    <form action="/quotes" method="POST">
        <input type="text" placeholder="name" name="name">
        <input type="text" placeholder="quote" name="quote">
        <button type="submit">Submit</button>
    </form>
    <h2> Quotes </h2>

    <ul class="quotes">
        <!-- Loop through quotes -->
        <% for(var i = 0; i < quotes.length; i++) {%>
        <li class="quote">
            <!-- Output name from the iterated quote object -->
            <span><%= quotes[i].name %></span>:
            <!-- Output quote from the iterated quote object -->
            <span><%= quotes[i].quote %></span>
        </li>
        <% } %>
    </ul>

    <button id="updateBtn">Replace Yoda's quote</button>
    <button id="deleteBtn">Delete Darth Vadar's quote</button>
    <div id="message"></div>
    <script src="/main.js"></script>
</body>

</html>