<!--pages/play/play.wxml-->
<view class="container">
  <text>Font awesome: http://fontawesome.dashgame.com/</text>
  <button type="default" size="{{defaultSize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="default" hover-class="other-button-hover">
    default
  </button>
  <button type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="primary">
    primary
  </button>
  <button type="warn" size="{{warnSize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="warn">
    warn
  </button>

  <button type="primary" loading="{{dataLoading}}" bindtap="loadHPData">Health Data</button>
  <button type="warn" loading="{{dataLoading}}" plain bindtap="showLoading">
    <i class="fa fa-camera-retro fa-lg"></i> ShowLoading</button>

  <button bindtap="showActionsheet">Action Sheet</button>

  <button plain bindtap="showModal">Model</button>

  <button bindtap="setDisabled">点击设置以上按钮disabled属性</button>
  <button bindtap="setPlain">点击设置以上按钮plain属性</button>
  <button bindtap="setLoading">点击设置以上按钮loading属性</button>
  <button open-type="contact">进入客服会话</button>
  <button open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="onGotUserInfo">
    获取用户信息
  </button>
  <button open-type="openSetting">打开授权设置页</button>
</view>