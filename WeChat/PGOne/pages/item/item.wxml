<!--pages/item/item.wxml-->
<view class="page">
  <view class="page__hd">
    <view class="page__title">{{item.name}}</view>
    <view class="page__desc">{{item.specialties}}</view>
    <view class="page__desc"><i class="fa fa-home"></i> {{item.address}}</view>
  </view>
  <map id="map" longitude="{{lng}}" latitude="{{lat}}" scale="14" markers="{{markers}}" show-location style="width: 100%; height: 600px;">
  </map>
</view>