<view class="page">
  <view class="page__bd">
    <view class="weui-panel weui-panel_access" wx:for="{{data}}" wx:key="item_id">
      <block wx:if="{{item.media_name}}">
        <view class="weui-panel__hd">{{item.media_name}}</view>
      </block>

      <view class="weui-panel__bd">
        <navigator url="{{item.display_url}}" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
          <view class="weui-media-box__hd weui-media-box__hd_in-appmsg" wx:if="{{item.media_info}}">
            <image class="weui-media-box__thumb" src="{{item.media_info.avatar_url}}" />
          </view>
          <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
            <view class="weui-media-box__title">{{item.title}}</view>
            <view class="weui-media-box__desc">{{item.abstract}}</view>
          </view>
        </navigator>
      </view>

      <view class="weui-panel__ft" wx:if="{{item.keywords}}">
        <view class="weui-cell weui-cell_access weui-cell_link">
          <view class="weui-media-box__info">
            <view class="weui-media-box__info__meta">{{item.keywords}}</view>
          
          </view>
        </view>
      </view>
    </view>
  </view>
</view>